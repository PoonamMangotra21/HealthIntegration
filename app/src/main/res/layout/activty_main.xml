<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/googleFitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_fit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/samSungHealthButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
     <Button
         android:id="@+id/samSungHealthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/samsung_health"
        app:layout_constraintTop_toBottomOf="@+id/googleFitButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>